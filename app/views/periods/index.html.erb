<p id="notice"><%= notice %></p>

<h1>Periodi</h1>

<table>
  <thead>
    <tr>
      <th>Denominazione</th>
      <th>Data inizio</th>
      <th>Data fine</th>
      <th>Stato aperto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.denominazione %></td>
        <td><%= period.data_inizio %></td>
        <td><%= period.data_fine %></td>
        <td><%= period.stato_aperto %></td>
        <td><%= link_to 'Show', period %></td>
        <td><%= link_to 'Edit', edit_period_path(period) %></td>
        <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Periodo', new_period_path %>
