<p id="notice"><%= notice %></p>

<h1>Pagella importata</h1>

<h1>Valutazioni importate</h1>
<table>
  <thead>
    <tr>
	  <th>Nr</th>
	  <th>Nominativo</th>
	  <th>Fattore di valutazione</th>
	  <th>Voto</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% if @Importati != nil %>
    <% @Importati.each do |persona| %>
	<%   p= Person.find(persona.id) %>
      <tr>
	    <td><%= i = i + 1 %></td>
        <td><b><%= p.nominativo %></b></td>
		<td></td>
		<td></td>
	  </tr>
	  
	  <% p.valutazioni.each do |v| %>
	    <tr>
		<td></td>
		<td></td>
		<td><%= v.vfactor.denominazione %></td>
		<td><%= v.value %></td>
		 </tr>
	  <% end %>
	 <tr>
	    <td></td>
        <td><b>Totale</b></td>
		<td></td>
		<td><b><%= p.punteggiofinale %></b></td>
	  </tr>
    <% end %>
	<% end %>
  </tbody>
</table>



<h1>Errori</h1>
<table>
  <thead>
    <tr>
	  <th>Nr</th>
	  <th>Errore</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% if @Errori != nil %>
    <% @Errori.each do |err| %>
      <tr>
	    <td><%= i = i + 1 %></td>
        <td><%= err %></td>
	  </tr>
    <% end %>
	<% end %>
  </tbody>
</table>






