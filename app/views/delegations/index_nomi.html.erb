<h1>Delegations</h1>

<table>
  <thead>
    <tr>
      <th>Delegante</th>
      <th>Delegato</th>
      <th>Office</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @delegations.each do |delegation| %>
      <tr>
        <td><%= delegation.delegante.nominativo %></td>
        <td><%= delegation.delegato.nominativo %></td>
        <td><%= delegation.ufficio.nome %></td>
        <td><%= link_to 'Show', delegation %></td>
        <td><%= link_to 'Edit', edit_delegation_path(delegation) %></td>
        <td><%= link_to 'Destroy', delegation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

